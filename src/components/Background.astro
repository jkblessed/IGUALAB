---
// Lava lamp style animated background
---

<div class="background">
  <div class="lava lava-1"></div>
  <div class="lava lava-2"></div>
  <div class="lava lava-3"></div>
  <div class="lava lava-4"></div>
  <div class="lava lava-5"></div>
</div>

<style>
  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: linear-gradient(180deg, #020108 0%, #0a0520 50%, #050210 100%);
    overflow: hidden;
  }

  .lava {
    position: absolute;
    border-radius: 50%;
    filter: blur(40px);
  }

  .lava-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(0, 150, 255, 0.9) 0%, rgba(0, 100, 200, 0.5) 50%, transparent 70%);
    bottom: -20%;
    left: 20%;
    animation: rise 25s ease-in-out infinite;
  }

  .lava-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(120, 0, 255, 0.8) 0%, rgba(80, 0, 180, 0.4) 50%, transparent 70%);
    bottom: -15%;
    right: 25%;
    animation: rise 30s ease-in-out infinite;
    animation-delay: -8s;
  }

  .lava-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(0, 200, 200, 0.7) 0%, rgba(0, 120, 150, 0.3) 50%, transparent 70%);
    bottom: -10%;
    left: 50%;
    animation: rise 22s ease-in-out infinite;
    animation-delay: -15s;
  }

  .lava-4 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(180, 50, 255, 0.75) 0%, rgba(100, 20, 180, 0.35) 50%, transparent 70%);
    bottom: -25%;
    left: 5%;
    animation: rise 28s ease-in-out infinite;
    animation-delay: -5s;
  }

  .lava-5 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(0, 180, 255, 0.7) 0%, rgba(0, 100, 180, 0.3) 50%, transparent 70%);
    bottom: -15%;
    right: 10%;
    animation: rise 20s ease-in-out infinite;
    animation-delay: -12s;
  }

  @keyframes rise {
    0%, 100% {
      transform: translateY(0) scale(1);
      border-radius: 50%;
    }
    25% {
      transform: translateY(-40vh) scale(1.2);
      border-radius: 45% 55% 50% 50%;
    }
    50% {
      transform: translateY(-80vh) scale(0.9);
      border-radius: 50% 50% 45% 55%;
    }
    75% {
      transform: translateY(-40vh) scale(1.1);
      border-radius: 55% 45% 50% 50%;
    }
  }

  /* Smaller on mobile */
  @media (max-width: 768px) {
    .lava-1 {
      width: 300px;
      height: 300px;
    }

    .lava-2 {
      width: 250px;
      height: 250px;
    }

    .lava-3 {
      width: 200px;
      height: 200px;
    }

    .lava-4 {
      width: 180px;
      height: 180px;
    }

    .lava-5 {
      width: 150px;
      height: 150px;
    }
  }
</style>